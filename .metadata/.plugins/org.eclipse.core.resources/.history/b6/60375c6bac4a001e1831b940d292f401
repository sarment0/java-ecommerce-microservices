package com.sarmento.productservice.service;
import org.springframework.stereotype.Service;
import com.sarmento.productservice.dto.ProductRequest;
import com.sarmento.productservice.model.Product;
import com.sarmento.productservice.repository.ProductRepository;

import lombok.RequiredArgsConstructor;
import lombok.extern.slf4j.Slf4j;

@Service
@RequiredArgsConstructor
@Slf4j
public class ProductService {
	
	private final ProductRepository productRepository;

	public void createProduct(ProductRequest productRequest) {
		Product product = Product.builder()
				.name(productRequest.getName())
				.description(productRequest.getDescription())
				.price(productRequest.getPrice())
				.build();
		
		productRepository.save(product);
		log.info("Product " + product.getId() +  " is saved.");
		
	}

	public void getAllProducts() {
		// TODO Auto-generated method stub
		
	}
}
